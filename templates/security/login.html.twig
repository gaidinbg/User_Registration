{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block stylesheets %}<link rel="stylesheet" href="css/coming-soon.css">{% endblock %}

{% block body %}
    <div class="overlay"></div>
    <video playsinline="playsinline" autoplay="autoplay" muted="muted" loop="loop">
        <source src="mp4/bg.mp4" type="video/mp4">
    </video>
<div class="container my-container">
    <div class="row">

        <div class="col-md-5 mx-auto">


            <div id="first">
                <div class="myform form ">
                    {% if error %}
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}

                    {% if app.user %}
                    <div class="mb-3">
                        <div class="alert alert-info">   You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a> </div>
                        {% endif %}
                    <div class="logo mb-3">
                        <div class="col-md-12 text-center">
                            <h1>Please sign in</h1>
                        </div>
                    </div>



                    <form method="post">
                        <div class="form-group">
                            <label for="inputEmail">Email</label>
                            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" aria-describedby="emailHelp"  placeholder="Enter email" required autofocus>
                        </div>
                        <div class="form-group">
                              <label for="inputPassword">Password</label>
                             <input type="password" name="password" id="inputPassword" class="form-control" aria-describedby="emailHelp" placeholder="Enter Password" required>
                        </div>
    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}

    <button class="btn btn-block mybtn btn-primary tx-tfm" type="submit">
        Sign in
    </button>
                        <div class="form-group my-form-group">
                            <p class="text-center">Don't have account? <a href="{{ path('app_register') }}" id="signup">Sign up here</a></p>
                        </div>
                        <div class="form-group">
                            <p class="text-center">or return <a href="{{ path('app_index') }}">Home</a></p>
                        </div>
</form>
                </div>
            </div>
        </div>
    </div>
</div>
</div>
{% endblock %}
